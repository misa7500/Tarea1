<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rmisael.tarea.MainActivity">

    <EditText
        android:id="@+id/Hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Nombre"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="Costo por Hora"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/Fraccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Hora"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Costo por Fraccion"
        android:inputType="numberDecimal" />

    <Button
        android:text="Iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button_hola"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="78dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Resultado"
        android:layout_below="@+id/Fraccion"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:layout_alignParentEnd="true"
        android:text="Por Pagar :" />

</RelativeLayout>
